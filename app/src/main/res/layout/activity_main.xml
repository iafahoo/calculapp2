<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="292dp"
        android:layout_height="141dp"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="0dp" />

    <TableLayout
        android:layout_width="317dp"
        android:layout_height="385dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantalla">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:text="UMBCalculapp"
                android:textAlignment="center"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/boff"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Salir"
                android:text="Off"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="BorrarTodo"
                android:text="AC" />

            <Button
                android:id="@+id/bultimo"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Borrar"
                android:text="Del" />

            <Button
                android:id="@+id/bsuma"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Sumar"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button16"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b7"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b8"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b9"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bresta"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Restar"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b4"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b5"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b6"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bmulti"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Multiplicar"
                android:text="X"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="314dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b1"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b2"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b3"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bdivi"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="Dividir"
                android:text="/"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button20"
                android:layout_width="78dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="b0"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="78dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/bigual"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:onClick="bigual"
                android:text="="
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>